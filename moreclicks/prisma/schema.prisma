generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AnalysisStatus {
  processing
  completed
  failed
}

model User {
  id                String              @id @default(cuid())
  email             String              @unique
  name              String?
  image             String?
  emailVerified     DateTime?
  stripeCustomerId  String?             @unique
  lemonSqueezyCustomerId String?        @unique
  dodoCustomerId    String?             @unique
  
  accounts          Account[]
  sessions          Session[]
  subscription      Subscription?
  analyses          Analysis[]
  keywordResearch   KeywordResearch[]
  competitors       CompetitorAnalysis[]
  serpTrackings     SERPTracking[]
  contentOptimizations ContentOptimization[]
  seoAudits         SEOAudit[]
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  @@index([email])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Subscription {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  stripeSubscriptionId  String?  @unique
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  
  lemonSqueezySubscriptionId String? @unique
  lemonSqueezyVariantId       String?
  lemonSqueezyCurrentPeriodEnd DateTime?
  
  dodoSubscriptionId    String? @unique
  dodoPlanId            String?
  dodoCurrentPeriodEnd  DateTime?
  
  plan                  String   // "basic", "pro", "agency"
  status                String   // "active", "canceled", "past_due"
  
  analysesUsed          Int      @default(0)
  analysesLimit         Int
  keywordsUsed          Int      @default(0)
  keywordsLimit         Int
  competitorsUsed       Int      @default(0)
  competitorsLimit      Int
  serpTrackingsUsed     Int      @default(0)
  serpTrackingsLimit    Int      @default(10)
  contentOptimizationsUsed Int   @default(0)
  contentOptimizationsLimit Int  @default(10)
  seoAuditsUsed         Int      @default(0)
  seoAuditsLimit        Int      @default(10)
  
  resetDate             DateTime @default(now())
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([userId])
}

model Analysis {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url             String
  domain          String
  seoScore        Int
  results         Json
  
  type            String   // "instant" or "full"
  status          AnalysisStatus @default(processing)
  errorMessage    String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([domain])
}

model KeywordResearch {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  keyword           String
  
  searchVolume      Int?
  keywordDifficulty Int?
  cpc               Float?
  competition       Float?
  searchIntent      String?
  
  serpData          Json
  relatedKeywords   Json?
  contentBrief      Json?
  
  status            AnalysisStatus @default(processing)
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([keyword])
}

model CompetitorAnalysis {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  userUrl         String
  userDomain      String
  method          String   // "keyword" or "url"
  sourceKeyword   String?
  
  competitors     Json
  comparison      Json
  keywordGaps     Json?
  contentGaps     Json?
  aiInsights      Json?
  
  status          AnalysisStatus @default(processing)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
}

model CachedData {
  id              String   @id @default(cuid())
  cacheKey        String   @unique
  data            Json
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  
  @@index([cacheKey, expiresAt])
}

model SERPTracking {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  keyword         String
  targetUrl       String?
  targetDomain    String?
  location        String   @default("us")
  language        String   @default("en")
  
  currentRanking  Int?
  previousRanking Int?
  bestRanking     Int?
  worstRanking    Int?
  
  rankings        Json     // Array of { date, ranking, url, title, snippet }
  serpData        Json     // Full SERP data from latest check
  
  status          AnalysisStatus @default(processing)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  lastChecked     DateTime @default(now())
  
  @@index([userId, createdAt])
  @@index([keyword])
  @@index([targetUrl])
}

model ContentOptimization {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url             String
  content         String   @db.Text
  targetKeyword   String?
  
  originalMetrics Json    // Original content metrics
  optimizedContent String? @db.Text
  suggestions     Json     // AI suggestions
  improvements    Json     // Calculated improvements
  
  status          AnalysisStatus @default(processing)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([url])
}

model SEOAudit {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url             String
  domain          String
  
  technicalScore  Int
  onPageScore     Int
  offPageScore    Int
  performanceScore Int
  
  technicalIssues Json    // Technical SEO issues
  onPageIssues    Json    // On-page SEO issues
  offPageIssues   Json    // Off-page SEO issues
  performanceIssues Json  // Performance issues
  
  recommendations Json    // AI-generated recommendations
  priorityActions Json    // Prioritized action items
  
  status          AnalysisStatus @default(processing)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([domain])
}
