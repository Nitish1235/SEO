generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @default(cuid())
  email             String              @unique
  name              String?
  image             String?
  emailVerified     DateTime?
  stripeCustomerId  String?             @unique
  
  accounts          Account[]
  sessions          Session[]
  subscription      Subscription?
  analyses          Analysis[]
  keywordResearch   KeywordResearch[]
  competitors       CompetitorAnalysis[]
  
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  @@index([email])
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?  @db.Text
  access_token      String?  @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?  @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Subscription {
  id                    String   @id @default(cuid())
  userId                String   @unique
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  stripeSubscriptionId  String   @unique
  stripePriceId         String
  stripeCurrentPeriodEnd DateTime
  
  plan                  String   // "basic", "pro", "agency"
  status                String   // "active", "canceled", "past_due"
  
  analysesUsed          Int      @default(0)
  analysesLimit         Int
  keywordsUsed          Int      @default(0)
  keywordsLimit         Int
  competitorsUsed       Int      @default(0)
  competitorsLimit      Int
  
  resetDate             DateTime @default(now())
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  @@index([userId])
}

model Analysis {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  url             String
  domain          String
  seoScore        Int
  results         Json
  
  type            String   // "instant" or "full"
  status          String   // "completed", "processing", "failed"
  errorMessage    String?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([domain])
}

model KeywordResearch {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  keyword           String
  
  searchVolume      Int?
  keywordDifficulty Int?
  cpc               Float?
  competition       Float?
  searchIntent      String?
  
  serpData          Json
  relatedKeywords   Json?
  contentBrief      Json?
  
  status            String
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([userId, createdAt])
  @@index([keyword])
}

model CompetitorAnalysis {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  userUrl         String
  userDomain      String
  method          String   // "keyword" or "url"
  sourceKeyword   String?
  
  competitors     Json
  comparison      Json
  keywordGaps     Json?
  contentGaps     Json?
  aiInsights      Json?
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([userId, createdAt])
}

model CachedData {
  id              String   @id @default(cuid())
  cacheKey        String   @unique
  data            Json
  expiresAt       DateTime
  createdAt       DateTime @default(now())
  
  @@index([cacheKey, expiresAt])
}
